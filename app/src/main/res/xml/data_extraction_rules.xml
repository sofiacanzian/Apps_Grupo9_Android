<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Define what to back up to the cloud -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="."/>
        <include domain="database" path="."/>
        <!-- You can add <exclude> rules here for specific files/folders -->
    </cloud-backup>
    <device-transfer>
        <!-- Define what to transfer to a new device -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="."/>
        <include domain="database" path="."/>
        <!-- You can add <exclude> rules here -->
    </device-transfer>
</data-extraction-rules>